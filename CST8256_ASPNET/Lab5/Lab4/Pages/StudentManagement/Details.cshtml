@page
@model Lab5.Pages.StudentManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Student.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
    </dl>
</div>


<div>
    <h4>Academic Records</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-page="" asp-route-orderby="Course"><label>Course</label></a>
                </th>
                <th>
                    <a asp-page="" asp-route-orderby="Grade"><label>Grade</label></a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Student.AcademicRecords)
            {
                <tr>
                    <td>
                        @{
                            var title = "";
                            title = Model.Courses.FirstOrDefault(c => c.Code == item.CourseCode).Title;
                        }
                        @title
                    </td>
                    <td>
                        @item.Grade
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
