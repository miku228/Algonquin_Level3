@model IEnumerable<Lab7.Models.DataAccess.AcademicRecord>

@{
    ViewData["Title"] = "EditAll";
}

<h1>EditAll</h1>

<h4>AcademicRecord</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form method="post">
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            <a asp-page="" asp-route-orderby="course"><label>Course</label></a>
                        </th>
                        <th>
                            <a asp-page="" asp-route-orderby="student"><label>@Html.DisplayNameFor(model => model.Student)</label></a>
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Grade)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                <input type="hidden" asp-for="@item.CourseCode" />
                                @item.CourseCodeNavigation.DisplayText
                            </td>
                            <td>
                                <input type="hidden" asp-for="@item.StudentId" />
                                @item.Student.DisplayText
                            </td>
                            <td>
                                <input asp-for="@item.Grade" class="form-control" />
                            </td>
               
                        </tr>
                    }
                </tbody>
            </table>
            <!-- ************** -->
            <!-- submit buttons -->
            <!-- ************** -->
            <div class="form-group">
                <input type="submit" value="Save"  class="btn btn-primary" />
                <input type="reset" value="Cancel" class="btn btn-primary" onclick=" return FormCancel(); " />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script type="text/javascript">
        function FormCancel() {
            return window.location.href = '/AcademicRecords';
        }
    </script>
}



